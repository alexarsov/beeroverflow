@model BeerOverflow.Web.Models.BanViewModel

<h4>Ban user</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BanUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Reason</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Ban User" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<div>
    <a asp-controller="User" asp-action="GetAllUsers">Back to users</a>
</div>

